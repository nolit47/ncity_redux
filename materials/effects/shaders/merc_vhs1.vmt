{
	$pixshader "merc_vhs1_ps20"

	$basetexture "_rt_FullFrameFB"

	// Mandatory parameters, do not change these
	$vertexcolor 1
	$vertextransform 1
	$ignorez        1
	$fix_fb         32768
	"<dx90"
	{
		$no_draw 1
	}
	
	$c0_x 0
	$c0_y 0.008
	$c0_z 0.008

	$copyalpha                 1
	$alpha_blend_color_overlay 0
	$alpha_blend               0
	$linearwrite               0
	$linearread_basetexture    0
	$linearread_texture1       0
	$linearread_texture2       0
	$linearread_texture3       0
	
	Proxies
	{
		Equals
		{
			srcVar1			$fix_fb
			resultVar		$flags2
		}

		CurrentTime
		{
			resultVar $c0_x
		}
	}
}

